
@model Application.Home.Queries.GetHotelRoom.GetHotelRoomResponse
@{
    ViewData["Title"] = "Product";
}

<h1>Product</h1>
<!-- ##### Single Product Details Area Start ##### -->
<section class="single_product_details_area d-flex align-items-center">

    <!-- Single Product Thumb -->
    <div class="single_product_thumb clearfix">
        <div class="product_thumbnail_slides owl-carousel">
            @foreach (var image in Model.Room.Images)
            {
                <img src="@image" alt="">
            }


        </div>
    </div>

    <!-- Single Product Description -->
    <div class="single_product_desc clearfix">

        <a href="cart.html">
            <h2> BEST WESTERN City Hotel, BW Premier Collection </h2>
        </a>
        <span> 4-star hotel with restaurant </span>
        <p class="product-price"><span> @Model.Room.PriceForAdults</span> @Model.Room.PriceForChildren </p>

        <p class="product-desc">
            Main amenities
            61 guestrooms
            Childcare
            Terrace
        </p>

        <!-- Form -->
        <form class="cart-form clearfix" method="get" asp-controller="Reservation" asp-action="Create">
           
            


            <!-- Cart & Favourite Box -->
            <div class="cart-fav-box d-flex align-items-center">
                <!-- Cart -->
                <button type="submit" name="addtocart" value="5" class="btn essence-btn">Reserve now</button>
                
            </div>
        </form>
    </div>
</section>
<!-- ##### Single Product Details Area End ##### -->