@model Application.Admin.Queries.ListOfEmployees.ListOfEmployeesResponse
@{
    ViewData["Title"] = "Index";
}

<div class="breadcumb_area bg-img" style="background-image: url(img/core-img/breadcumb.jpg);margin-top: 100px;">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="page-title text-center">
                    <h2>Reservations list</h2>

                </div>
            </div>
        </div>
    </div>
</div>


<!-- ##### List Area ##### -->
<div class="card bd-0 shadow-base pd-30 mg-t-20">
    <div class="d-flex align-items-center justify-content-between mg-b-30">
        <div>
            <h6 class="tx-13 tx-uppercase tx-inverse tx-semibold tx-spacing-1">Newly Registered Users</h6>
            <p class="mg-b-0"><i class="icon ion-calendar mg-r-5"></i> From October 2017 - December 2017</p>
        </div>
        <a asp-controller="Admin" asp-action="Create"
           class="btn-outline-info btn-oblong tx-11 tx-uppercase tx-mont tx-medium tx-spacing-1 pd-x-30 bd-2">Create new</a>
    </div><!-- d-flex -->

    <table class="table table-valign-middle mg-b-0">
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td class="pd-l-0-force">
                        <img src="" class="wd-40 rounded-circle" alt="">

                    </td>
                    <td>
                        <h6 class="tx-inverse tx-14 mg-b-0">@employee.FullName</h6>
                        <span class="tx-12">@employee.Email</span>
                    </td>
                    <td>@employee.HiredOnDate</td>
                    <td><span id="sparkline1">1,4,4,7,5,9,4,7,5,9,1</span></td>

                </tr>
            }

        </tbody>
    </table>
</div>
